#include <stdio.h>
#include <string.h>
#include <ctype.h>

char input[100];
int i = 0;

/* Function Declarations */
int E();
int EP();
int T();
int TP();
int F();

int main()
{
    printf("\nRecursive Descent Parsing for the Grammar\n");
    printf("----------------------------------------\n");
    printf("E  -> T E'\n");
    printf("E' -> + T E' | @\n");
    printf("T  -> F T'\n");
    printf("T' -> * F T' | @\n");
    printf("F  -> (E) | id\n");

    printf("\nEnter the string: ");
    fgets(input, sizeof(input), stdin);

    // Remove newline
    input[strcspn(input, "\n")] = '\0';

    if (E() && input[i] == '\0')
        printf("\nString is accepted\n");
    else
        printf("\nString is not accepted\n");

    return 0;
}

/* E -> T E' */
int E()
{
    if (T())
        return EP();

    return 0;
}

/* E' -> + T E' | @ */
int EP()
{
    if (input[i] == '+')
    {
        i++;

        if (T())
            return EP();

        return 0;
    }

    return 1;   // ε production
}

/* T -> F T' */
int T()
{
    if (F())
        return TP();

    return 0;
}

/* T' -> * F T' | @ */
int TP()
{
    if (input[i] == '*')
    {
        i++;

        if (F())
            return TP();

        return 0;
    }

    return 1;   // ε production
}

/* F -> (E) | id */
int F()
{
    // (E)
    if (input[i] == '(')
    {
        i++;

        if (E())
        {
            if (input[i] == ')')
            {
                i++;
                return 1;
            }
        }
        return 0;
    }

    // id (single letter)
    if (isalpha(input[i]))
    {
        i++;
        return 1;
    }

    return 0;
}

OUTPUT:
Recursive Descent Parsing for the Grammar
----------------------------------------
E  -> T E'
E' -> + T E' | @
T  -> F T'
T' -> * F T' | @
F  -> (E) | id

Enter the string: (a+b)*c

String is accepted
