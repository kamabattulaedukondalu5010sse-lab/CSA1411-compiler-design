#include <stdio.h>

int main() {

    char str[200];
    int i, words = 0, lines = 0, chars = 0;

    printf("Enter text (Press Ctrl+Z + Enter to finish):\n");

    fgets(str, sizeof(str), stdin);

    for (i = 0; str[i] != '\0'; i++) {

        if (str[i] == '\n')
            lines++;

        if (str[i] != ' ' && str[i] != '\n')
            chars++;

        if ((str[i] == ' ' || str[i] == '\n') &&
            (i > 0 && str[i-1] != ' ' && str[i-1] != '\n'))
            words++;
    }

    /* Count last word */
    if (chars > 0 && str[i-1] != ' ' && str[i-1] != '\n')
        words++;

    printf("Total Words      : %d\n", words);
    printf("Total Lines      : %d\n", lines + 1);
    printf("Total Characters : %d\n", chars);

    return 0;
}

OUTPUT:
Enter text (Press Ctrl+Z + Enter to finish):
void main()
Total Words      : 2
Total Lines      : 2
Total Characters : 10
