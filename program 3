#include <stdio.h>
#include <ctype.h>
#include <string.h>

int isKeyword(char word[]) {

    const char *key[] = {
        "main","int","float","char","if","else",
        "for","while","return","printf","void"
    };

    for (int i = 0; i < 11; i++)
        if (strcmp(word, key[i]) == 0)
            return 1;

    return 0;
}

int main() {

    char ch, word[50];
    int i = 0;

    printf("Enter code (Press Ctrl+Z then Enter to finish):\n");

    while ((ch = getchar()) != EOF) {

        if (ch==' '||ch=='\n'||ch=='\t')
            continue;

        if (ch=='+'||ch=='-'||ch=='*'||ch=='/'||ch=='='||ch=='%')
            printf("%c is operator\n", ch);

        if (isalnum(ch)) {
            word[i++] = ch;
        }
        else if (i > 0) {

            word[i] = '\0';

            if (isKeyword(word))
                printf("%s is keyword\n", word);
            else
                printf("%s is identifier\n", word);

            i = 0;
        }
    }

    return 0;
}
